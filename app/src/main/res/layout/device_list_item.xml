<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.ayatidevices.ViewPackage.OpenSansSemiBold
        android:id="@+id/txtdevice"
        android:text="Confirm Your Device"
        android:textSize="@dimen/_14sdp"
        android:padding="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_below="@id/txtdevice"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/background_right"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <com.example.ayatidevices.ViewPackage.OpenSansSemiBold
        android:id="@+id/text1"
        android:visibility="gone"
      android:textAlignment="center"
        android:text="Diabetic Foot Screener"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.example.ayatidevices.ViewPackage.OpenSansRegular
        android:id="@+id/text2"
        android:visibility="gone"
        android:textColor="@color/white"
        android:text="Model: STIMU"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_14sdp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
        <com.example.ayatidevices.ViewPackage.OpenSansSemiBold
            android:textAlignment="center"
            android:text="Diabetic Foot Screener"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <com.example.ayatidevices.ViewPackage.OpenSansRegular
            android:textColor="@color/white"
            android:text="Model: STIMU"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_14sdp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    </LinearLayout>
</RelativeLayout>
